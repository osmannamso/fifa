@model IEnumerable<fifa.Models.TopScorersView>
@{
    int place = 1;
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Bombardiers</title>
    <link rel="stylesheet" href="/css/main.css" type="text/css" />
</head>
<body>
<div class="main-block">
    <div class="header-menu">
        <a class="item" href="/Main/Django">Home</a>
        <a class="item" href="/Main/Clubs?page=1">Clubs</a>
        <a class="item" href="/Main/OnlineChat">Online Chat</a>
        <a class="item active" href="/Main/Seasons">Seasons</a>
        <a class="item cursor-pointer" onclick="localStorage.removeItem('token'); window.location.href = '/Main/Index'">Logout</a>
    </div>
    <div class="content-menu">
        <div class="clubs-block">
            <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
                <thead>
                <tr>
                    <th>
                        Place
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Club)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Count)
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @place
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Photo)"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Club)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Logo)"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count)
                            @{
                                place++;
                            }
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>