@model IEnumerable<fifa.Models.Results>
@{
    int place = 1;
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="/css/main.css" type="text/css" />
</head>
<body>
<div class="main-block">
    <div class="header-menu">
        <a class="item" href="/Main/Django">Home</a>
        <a class="item" href="/Main/Clubs?page=1">Clubs</a>
        <a class="item" href="/Main/OnlineChat">Online Chat</a>
        <a class="item active" href="/Main/Seasons">Seasons</a>
        <a class="item cursor-pointer" onclick="localStorage.removeItem('token'); window.location.href = '/Main/Index'">Logout</a>
    </div>
    <div class="content-menu">
        <div class="clubs-block">
            <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
                <thead>
                <tr>
                    <th>
                        Place
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Club)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Games)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Wins)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Draws)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Loses)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ScoredGoals)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MissedGoals)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GoalDifference)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Score)
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @place
                        </td>
                        <td>
                            <img style="width: 35px" src="@Html.DisplayFor(modelItem => item.Logo)"/>
                        </td>
                        <td>
                            <a href="/Main/Club?id=@Html.DisplayFor(modelItem => item.ClubId)">@Html.DisplayFor(modelItem => item.Club)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Games)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Wins)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Draws)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Loses)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ScoredGoals)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MissedGoals)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GoalDifference)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Score)
                            @{ place++; }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>